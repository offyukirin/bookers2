<% if @book.errors %>
   <ul>
<% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
       <% end %>
        </ul>
      <% end %>


<div class="container">


<div class="row">
 <div class= "col-md-3">
   <h2>User info</h2>
   <%= image_tag @user.get_profile_image(100,100) , class:"mt-3 rounded-circle"; %>
   
   
    <%= link_to edit_user_path(@user.id), class:"nav-link text-dark" do %>
    <i class= "fas fa-user-cog"></i>
    
   
   <% end %>

   <h5>name</h5>
   <%= @user.name %>
   <h5>introduction</h5>
   <%= @user.introduction %>








        <!-- form_for部分 -->
   <%= form_for(@book,  url: books_path) do |f| %>
    <h2>New book</h2>
    <h4>Title</h4>
    <%= f.text_field :title,class: "col-xs-12" %>

    <h4>Opinion</h4>
     <%= f.text_field :body,class: "col-xs-12" %>
    <nav>
    <%= f.submit 'Create Book',class: "col-xs-12 btn btn-primary" %>
    </nav>
    <% end %>

  </div>

<div class= "offset-md-1"></div>



    <div class= "col-md-8">
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>

      <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
      </tr>


<!-- ユーザーの投稿一覧 -->

<% @books.each do |book| %>

<tr>
  
  <td></td>
  
  
  
  

  <td><%=link_to book.title, book_path(book.id) %></td>
  <td><%= book.body %></td>
  </tr>
  
  <% end %>
  </table>
  
    </div>
    
  
</div>
</div>