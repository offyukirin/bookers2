<div class="box">


<!DOCTYPE html>
<html>
<head>
  
 
<title>Bookers2</title>
<%= csrf_meta_tags %>
<%= csp_meta_tag %>
<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>











<body>
  <header class="navbar navbar-expand-lg navbar-dark text-white bg-dark">
    <div class="container">
      <nav class='nav navbar-nav navbar-left' >
        <div class="box">
          <%= link_to root_path, class:"nav-link text-light" do %>
          <span class="glyphicon glyphicon-user" aria-hidden="true">Bookers2</span>
          <% end %>
        </div>
      </nav>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li>
              <i class= "fas fa-home"></i>
              <%= link_to "Home", user_path(current_user),  class:"nav-link text-light"  %>
            
            
            </li>
            
            <li>
              <i class= "fas fa-users"></i>
              <%= link_to "Users", users_path, class:"nav-link text-light"  %>
            
            
            </li>
            
            <li>
              <i class= "fas fa-book-open"></i>
              <%= link_to "Books", books_path, class:"nav-link text-light"  %>
            
            
            </li>
            <li>
              <i class= "fas fa-sign-out-alt"></i>
              <%= link_to "Log out",destroy_user_session_path, method: :delete,  class:"nav-link text-light"  %>
              
              
            </li>

          <% else %>
            <li>
              <%= link_to root_path ,class:"nav-link text-light" do %>
           <i class= "fas fa-home">Home</i>
            <% end %>
            </li>
            <li>
              <%= link_to about_path, class:"nav-link text-light" do %>
                <i class= "fas fa-link">About</i>
                <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path, class:"nav-link text-light" do %>
                <i class="fas fa-user-plus">Sign up</i>
                <% end %>
              </li>
            <li>
              <%= link_to new_user_session_path, class:"nav-link text-light" do %>
                <i class="fas fa-sign-in-alt">Log in</i>
                <% end %>
            </li>
          <% end %>
        </<ul>
      </nav>
    </div>
  </header>

  <div class= "body">

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
  </div>

 <%= yield %>
 


  <footer>
    <div class='container'>
      <div class='row'>
        <div class='offset-md-6'></div>
       <div class='col-md-6'><p>CopyRight Infratop.inc</p></div> 
      </div>
    </div>
  </footer>
  </body>
  </div>
</html>
